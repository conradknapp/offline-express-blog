extends layout

block content
  .post-container
    img(class="topic" src="/public/dist/js.svg")
    //- p(class="topic")= post.topic
    h1.Post__Title= post.title
    h4= post.author
    - const date = new Date(post.publishedDate)
    h5(class="time")= `${date.toDateString().slice(4)}`
    div(data-content= post.body class="output")!= md(post.body, true, allowedTags)
    .buttons
      button.PostBtn__Offline Save for offline
      button
        a(href=`/posts/edit/${post._id}`) Edit
      button.PostBtn__Delete(data-src= post._id type="submit") Delete
    .Flash__Message
      p Post saved for offline access!!! ðŸŽ‰
block scripts
  script(src="/public/dist/main.js")
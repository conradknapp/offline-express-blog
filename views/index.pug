extends layout
 
block content
  .container
    h1.Title__Underline Recent Posts
    ul
      each post, i in posts
        li(data-topic= post.topic).Post
          a(href=`/posts/${post._id}` class="Post__Link") 
            h1= post.title
          p= post.body.split(' ').slice(0, 25).join(' ')
    h3
      a(href="/posts" class="posts-link") ― Get All Posts ⟶
    form(method="post" action="/")
      label Stay in the loop
      input(type="email" name="signup_email" placeholder="Your Email" class="email-input")
      button(type="submit" class="email-submit") Submit